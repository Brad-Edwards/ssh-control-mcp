{
    "name": "ssh-control-mcp",
    "version": "0.1.9",
    "description": "MCP server for persistent SSH session management with interactive commands and background processes",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "ssh-control-mcp": "dist/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit",
        "docs": "typedoc",
        "prepublishOnly": "npm run typecheck && npm run test"
    },
    "keywords": [
        "mcp",
        "ssh",
        "model-context-protocol",
        "session-management",
        "persistent-ssh",
        "ai-agents",
        "llm",
        "remote-execution"
    ],
    "author": "Brad Edwards",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Brad-Edwards/ssh-control-mcp.git"
    },
    "homepage": "https://github.com/Brad-Edwards/ssh-control-mcp#readme",
    "bugs": {
        "url": "https://github.com/Brad-Edwards/ssh-control-mcp/issues"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "@types/node": "^24.6.2",
        "@types/ssh2": "^1.15.5",
        "@vitest/coverage-v8": "^3.2.4",
        "esbuild": "^0.25.10",
        "typedoc": "^0.28.13",
        "typescript": "^5.9.3",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.18.2",
        "ssh2": "^1.17.0",
        "winston": "^3.18.3",
        "winston-daily-rotate-file": "^5.0.0",
        "zod": "^3.25.76"
    }
}
